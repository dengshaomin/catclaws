<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp"
            android:scrollbars="none"
            tools:context="com.coder.catclaws.activity.MineInfoActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_userinfo_bg"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                >

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/head_translate_gold_bg"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="4dp"
                        fresco:actualImageScaleType="fitXY"
                        fresco:fadeDuration="300"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:roundAsCircle="true"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/right_image"
                        android:layout_toRightOf="@+id/left_image"
                        android:text="猫爪子"

                        android:textColor="#f1f1f1"
                        android:textSize="@dimen/text14"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-20dp"
                            android:layout_toRightOf="@+id/iconbg"
                            android:background="@drawable/corner_2_353155"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="10"
                            android:textColor="#d9d9ef"
                            android:textSize="@dimen/text14"
                            />

                        <ImageView
                            android:id="@+id/iconbg"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_coin"
                            />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/recharge_btn_yellow"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/invert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_red_bg"
            android:gravity="center"
            android:text="邀请好友"
            android:textColor="#ffe7d5"
            android:textSize="@dimen/text14"
            >

        </TextView>

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:text="消息"
            android:textColor="#f1f1f1"
            android:textSize="@dimen/text14"
            >

        </TextView>

        <TextView
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:text="地址管理"
            android:textColor="#f1f1f1"
            android:textSize="@dimen/text14"
            >

        </TextView>

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_white_bg"
            android:gravity="center"
            android:text="联系我们"
            android:textColor="#847f72"
            android:textSize="@dimen/text14"
            ></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/mine_setting_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="背景音乐"
                android:textColor="#d9d9ef"
                android:textSize="@dimen/text14"
                />

            <ImageView
                android:id="@+id/setting_bg_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_open_bg"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/mine_setting_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="音效"
                android:textColor="#d9d9ef"
                android:textSize="@dimen/text14"
                />

            <ImageView
                android:id="@+id/setting_yinxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_open_bg"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_yellow_bg"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text12"
            android:textStyle="bold"
            />
    </LinearLayout>


</ScrollView>
