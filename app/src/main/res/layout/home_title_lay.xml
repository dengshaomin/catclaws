<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/title_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/paddingLR"
        android:paddingRight="@dimen/paddingLR"
        android:paddingTop="10dp">

        <com.coder.catclaws.widgets.SquareLayout
            android:id="@+id/home_left_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_home_bg"
            android:gravity="center"
            >


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                fresco:actualImageScaleType="fitXY"
                fresco:fadeDuration="300"
                fresco:placeholderImageScaleType="fitXY"
                fresco:viewAspectRatio="2.0"/>

        </com.coder.catclaws.widgets.SquareLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_image"
            android:layout_toRightOf="@+id/left_image"
            android:gravity="center"
            android:text="猫爪子"
            android:textColor="@color/white"
            android:textSize="@dimen/hometitleText"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/home_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_home_mine">

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>