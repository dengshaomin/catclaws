<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/title_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/doll_info_bg"
                android:orientation="horizontal"
                android:padding="5dp">


                <com.coder.catclaws.widgets.SquareLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@drawable/icon_bg">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/icon_mine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        fresco:actualImageScaleType="fitXY"
                        fresco:fadeDuration="300"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:viewAspectRatio="2.0"/>
                </com.coder.catclaws.widgets.SquareLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="***"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text16"/>

                    <TextView
                        android:id="@+id/statu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/icon_free_time"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="游戏中"
                        android:textColor="@color/desc"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/doll_other_bg"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/room_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/num_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:text="100人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <com.coder.catclaws.widgets.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/icon_bg">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/icon_other_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            fresco:actualImageScaleType="fitXY"
                            fresco:fadeDuration="300"
                            fresco:placeholderImageScaleType="fitXY"
                            fresco:viewAspectRatio="2.0"/>
                    </com.coder.catclaws.widgets.SquareLayout>

                    <com.coder.catclaws.widgets.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/icon_bg">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/icon_other_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            fresco:actualImageScaleType="fitXY"
                            fresco:fadeDuration="300"
                            fresco:placeholderImageScaleType="fitXY"
                            fresco:viewAspectRatio="2.0"/>
                    </com.coder.catclaws.widgets.SquareLayout>

                    <com.coder.catclaws.widgets.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:background="@drawable/icon_bg">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/icon_other_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            fresco:actualImageScaleType="fitXY"
                            fresco:fadeDuration="300"
                            fresco:placeholderImageScaleType="fitXY"
                            fresco:viewAspectRatio="2.0"/>
                    </com.coder.catclaws.widgets.SquareLayout>


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:background="@drawable/icon_more"
                            android:scaleType="fitCenter"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/normal_lay"
            android:layout_below="@+id/title_lay"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_video_bg"
            android:padding="4dp">
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/normal_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_start_bg"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/onetime_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/desc_black_bg"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="35dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="10/次"
                        android:textColor="@color/desc"
                        android:textSize="@dimen/text16"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_coin"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/my_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/desc_black_bg"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="45dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:text="10"
                        android:textColor="@color/desc"
                        android:textSize="@dimen/text16"/>

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_coin"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/recharge"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/recharge_bg"/>
            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/icon_camera_roat"/>

    <RelativeLayout
        android:id="@+id/catch_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:paddingBottom="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/time_bg"/>

        <TextView
            android:id="@+id/get"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/icon_c_get"/>
    </RelativeLayout>

    <com.coder.catclaws.widgets.ControlView
        android:id="@+id/control_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>