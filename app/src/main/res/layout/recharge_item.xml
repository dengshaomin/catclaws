<?xml version="1.0" encoding="utf-8"?>
<com.coder.catclaws.widgets.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                         android:id="@+id/recharge_item_rootview"
                                         android:layout_width="match_parent"
                                         android:layout_height="wrap_content"
                                         android:background="@drawable/recharge_item_selector"
                                         android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        >

        <com.coder.catclaws.widgets.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                fresco:actualImageScaleType="fitXY"
                fresco:fadeDuration="300"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="true"
                />

        </com.coder.catclaws.widgets.SquareLayout>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/corner_2_353155"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:text="RMB 9.9"
            android:textColor="#d9d9d9"
            android:textSize="@dimen/text14"
            />

    </LinearLayout>
</com.coder.catclaws.widgets.SquareLayout>