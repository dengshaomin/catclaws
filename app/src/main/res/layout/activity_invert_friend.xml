<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.coder.catclaws.activity.InvertFriendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_info_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

        <EditText
            android:id="@+id/invert_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/desc_black_bg"
            android:hint="输入邀请码"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/desc"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yellow_btn_short_bg"
            android:gravity="center"
            android:hint="兑换"
            android:textColor="@color/desc"
            android:textSize="@dimen/text16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_info_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="我的邀请码"
            android:textColor="@color/white"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/mine_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_goodsitem_desc_bg"
            android:gravity="center"
            android:hint="我的邀请码"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text16"/>

        <TextView
            android:id="@+id/invert_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/red_btn_short_bg"
            android:gravity="center"
            android:text="邀请好友"
            android:textColor="@color/white"
            android:textSize="@dimen/text16"/>

    </LinearLayout>
</LinearLayout>
