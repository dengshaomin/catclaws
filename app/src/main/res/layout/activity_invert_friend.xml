<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    tools:context="com.coder.catclaws.activity.InvertFriendActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_setting_bg"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        >

        <EditText
            android:id="@+id/invert_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/corner_2_353155"
            android:hint="输入邀请码"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#f1f1f1"
            android:textColorHint="#f1f1f1"
            android:textSize="@dimen/text14"
            />

        <TextView
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yellow_btn_short_bg"
            android:gravity="center"
            android:hint="兑换"
            android:textColor="#904517"
            android:textSize="@dimen/text12"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/mine_setting_bg"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="18dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="我的邀请码"
            android:textColor="#f1f1f1"
            android:textSize="@dimen/text14"
            />

        <TextView
            android:id="@+id/mine_code"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_goodsitem_desc_bg"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#f1f1f1"
            android:textSize="@dimen/text10"
            />

        <TextView
            android:id="@+id/invert_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/red_btn_short_bg"
            android:gravity="center"
            android:text="邀请好友"
            android:textColor="#ffe7d5"
            android:textSize="@dimen/text12"
            />

    </LinearLayout>
</LinearLayout>
