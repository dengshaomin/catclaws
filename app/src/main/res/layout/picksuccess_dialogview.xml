<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/pick_success_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pick_success_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    >

    <ImageView
        android:id="@+id/success_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@drawable/icon_close"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.coder.catclaws.widgets.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/goods_circle_bg"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                fresco:actualImageScaleType="fitXY"
                fresco:fadeDuration="300"
                fresco:placeholderImageScaleType="fitXY"
                fresco:viewAspectRatio="2.0"
                />
        </com.coder.catclaws.widgets.SquareLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="恭喜你,抓取成功!"
            android:textColor="#684818"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_btn_short_bg"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="@dimen/text12"
                />

            <TextView
                android:id="@+id/look"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/blue_btn_short_bg"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="@dimen/text12"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/play_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/yellow_btn_circle_bg"
            android:gravity="center"
            android:text="再来一局"
            android:textColor="@color/white"
            android:textSize="@dimen/text12"
            />
    </LinearLayout>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/count_down_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:isHideTimeBackground="true"
        app:isShowDay="false"
        app:isShowHour="false"
        app:isShowMillisecond="false"
        app:isShowMinute="false"
        app:isShowSecond="true"
        app:isTimeTextBold="true"
        app:suffixGravity="bottom"
        app:suffixHour="时"
        app:suffixMillisecond="毫秒"
        app:suffixMinute="分"
        app:suffixSecond=""
        app:suffixTextColor="#000000"
        app:suffixTextSize="12sp"
        app:timeTextColor="#000000"
        app:timeTextSize="22sp"
        />
</RelativeLayout>