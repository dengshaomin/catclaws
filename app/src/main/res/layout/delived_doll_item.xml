<?xml version="1.0" encoding="utf-8"?>
<com.coder.catclaws.widgets.SquareLayout android:id="@+id/deliverdoll_item_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recharge_item_selector"
    android:orientation="vertical"
    >


    <com.coder.catclaws.widgets.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/goods_circle_bg"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            fresco:actualImageScaleType="fitXY"
            fresco:fadeDuration="300"
            fresco:roundAsCircle="true"
            fresco:viewAspectRatio="1.0"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            fresco:actualImageScaleType="fitXY"
            fresco:fadeDuration="300"
            />
    </com.coder.catclaws.widgets.SquareLayout>
</com.coder.catclaws.widgets.SquareLayout>